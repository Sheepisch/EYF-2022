<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        html,body{
            margin:0;
            padding:0;
            box-sizing: border-box;
            background: #f1f1f1;
            position: relative;
        }
        #center{
            position: relative;
            margin:auto;
            width:800px;
            background: white;
            height:800px;
            margin-top: 100px;
            
        }
        .head{
            width:100%;
            height:60px;
            background-color: blue;
            font-size: 38px;
            color:white;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0px 10px 10px #ccc;
        }
        .send-msg-div{
            width:100%;
            position: absolute;
            height:60px;
            background-color: blue;
            bottom:0;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }
        .msgs-div{
            width:100%;
        }
        input[type='text']{
            width:70%;
            height:40px;
            padding-left: 10px;
        }
        button{
            width:150px;
            height:40px;
        }

        .left-msg {
            width: 100%;
            display: flex;
            justify-content: left;
        }

        .right-msg {
            width: 100%;
            display: flex;
            justify-content: flex-end;
        }

        .left-msg>span {
            margin: 10px;
            padding: 10px 20px;
            background-color: #ccc;
            color: black;
            border-radius: 5px;
            max-width: 500px;
        }

        .right-msg>span {
            margin: 10px;
            padding: 10px 20px;
            background-color: blue;
            color: white;
            border-radius: 5px;
            max-width: 500px;
        }
    </style>
</head>
<body>
    <div id="center">
        <div class="head">
            Chat Room
        </div>
        <div class="messages"></div>
        <div class="send-messages">
            <input type="text" id="msg" placeholder="Enter message...">
            <button onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script src="../socket.io/socket.io.js"></script>
    <script src="/Toast.js"></script>

    <script>
        const socket = io();
        const name = localStorage.getItem('Name');
        if (name == undefined) {
            window.location.href = '/chatbox';
        }
        socket.emit('new-client', name + 'has joined the chat');

        let toast = new Toast({
            type: 'info',
            duration: 5000,
            animate: true
        });

        socket.on('client', (message) => {
            toast.show(message, () => {});
        });

        socket.on('message', async data => {
            // let messagesDiv = await document.querySelector('.messages')[0];

            // messagesDiv.innerHTML += getHtml(data.name, data.msg);

            let msg = document.createElement('div');
            msg.className = 'left-msg';
            msg.innerHTML = `<span>${data.name}: ${data.msg}</span>`;
            console.log(localStorage.getItem('Name'))
            if(data.name == localStorage.getItem('Name')){
                msg.className = 'right-msg';
            } else {
                msg.className = 'left-msg';
            }
            document.querySelector('.messages').appendChild(msg);
        });

        function sendMessage() {
            let msg = document.getElementById('msg').value;
            socket.emit('message', {
                'name': localStorage.getItem('Name'),
                'msg': msg,
            });
            msg = '';
        }

        function getHtml(name, msg) {
            if (name == localStorage.getItem('Name')) {
                return `<div class="right-msg">` + 
                    `<span>`+ msg + `</span></div>`;
            } else {
                return `<div class="left-msg">` + 
                    `<span><b>`+ name + `</b>: ` + msg + `</span></div>`;
            }
        }
    </script>
</body>
</html>